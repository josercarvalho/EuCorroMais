@using Microsoft.AspNet.Identity
@using EuCorro.MVC.Site.Aolication.Services

@{ 
    var usuario = new AutenticacaoCliente().ObterAutenticado();
}

@if (@usuario != null)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "Clientes" }, FormMethod.Post, new { @id = "logoutForm", @class = "nav navbar-nav navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <div class="pull-right form-control">
            Bem Vindo, @Html.ActionLink(" " + User.Identity.GetUserName() + " | ", "Edit", "Atleta", routeValues: null, htmlAttributes: new { title = "Meus Dados" })
            <a href="javascript:document.getElementById('logoutForm').submit()" title="Fazer Log Off"> Sair</a>
        </div>
    }
}